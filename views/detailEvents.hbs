<section class="toggleSection detailEventPage">

    <article>

        <section class="detailPage">

            {{#item}}
            <h1>{{{title.rendered}}}</h1>
            <figure>
                <img class="{{event.theme}}" src="{{header.image}}" alt="Event image" meta property="og:image">

                <section class="tag">
                    <p>tag</p>
                </section>
                <button id="{{slug}}" class="buttonAddToRoute">

                    <svg class="addToRouteSvg" width="15" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14.8 14.7">
                        <g id="XMLID_401_">
                            <g id="XMLID_399_">
