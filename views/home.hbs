<section id="homePage" class="toggleSection">
    <h1 class="homePageHeading">Welcome to N-Festival</h1>
    {{!-- <button id="showFullMap">Explore Map</button> --}}
    <div id="output"></div>
    <div id="locationMap" class="hide" style="width:100%;height:50vh;"></div>
    <article class="filterBar">
        <div class="filterDay">
            <p>Day</p>
            <div class="filterBox">
                <select name="selectDay" id="selectDay">
                    <option value="dayOne" class="optionsDays">1 | 08/10/16
                    </option>
                    <option value="dayTwo" class="optionsDays">2 | 09/10/16</option>
                </select>
                <svg width="15" class="dropdownIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10.8 6.1">
                    <g id="XMLID_90_">
                        <path id="XMLID_31_" class="st0" d="M5.4 6.1L0 .7.7 0l4.7 4.7L10.1 0l.7.7z" />
                    </g>
                </svg>
            </div>
        </div>
        <button class="filterButton">Filter</button>
    </article>

    <ul class="discoverEvents">
        {{#obj}}
        <li class="discoverEvent {{event.theme}}">
            <div class="eventTitle">
                <a href="/{{id}}"><h2>{{header.title}}</h2></a>
                <button class="buttonAddToRoute">
                    <svg class="eventHeartIcon eventAdded" width="30" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 10.6">
                        <path id="XMLID_150_" class="st0" d="M6 1.7C6.9.3 8.6.1 9.7.6c1.4.6 2.1 2 1.9 3.5-.3 1.8-1.4 3.1-2.8 4.3-.7.6-1.6 1.2-2.5 1.8-.1.1-.4.1-.5 0-1.8-1-3.4-2.2-4.6-4C.5 5.1.2 4 .5 2.7.8 1.4 1.7.6 3 .4 4.2.1 5.3.5 6 1.7z" />
                    </svg>
                </button>
            </div>
            <div class="eventLocation">
                <svg class="eventLocationIcon eventIcon" width="15" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12.7 17">
                    <path id="XMLID_528_" class="st0" d="M6.4 0C2.8 0 0 2.8 0 6.4S6.4 17 6.4 17s6.4-7.2 6.4-10.7S9.9 0 6.4 0zm0 9c-1.6 0-3-1.3-3-3 0-1.6 1.3-3 3-3 1.6 0 3 1.3 3 3-.1 1.6-1.4 3-3 3z" />
                </svg>
                <p>{{info.location}}</p>
            </div>
            <div class="eventTimeDistance">
                <div class="eventTime">
                    <svg class="eventTimeIcon eventIcon" width="15" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12">
                        <g id="XMLID_89_">
                            <g id="XMLID_156_">
                                <g id="XMLID_159_">
                                    <path id="XMLID_160_" class="st0" d="M6 12c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zM6 1.1C3.3 1.1 1.1 3.3 1.1 6s2.2 4.9 4.9 4.9 4.9-2.2 4.9-4.9S8.7 1.1 6 1.1z" />
                                </g>
                                <g id="XMLID_157_">
                                    <path id="XMLID_158_" class="st0" d="M7.4 8.7c-.1 0-.1 0-.2-.1L5.5 6.9s-.1-.1-.1-.2v-4c0-.2.1-.3.3-.3.2.1.3.2.3.4v3.9l1.6 1.6c.1.1.1.3 0 .4h-.2z" />
                                </g>
                            </g>
                        </g>
                    </svg>
                    <p>{{info.start-time}} - {{info.end-time}}</p>
                </div>
                <div class="eventDistance">
                    <svg class="eventDistanceIcon eventIcon" width="40" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.2 11.6">
                        <g id="XMLID_112_">
